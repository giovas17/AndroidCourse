<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="40dp"/>
            <solid android:color="@color/button_login_background_pressed"/>
            <stroke android:color="@color/button_login_background_pressed"
                android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dp"/>
            <solid android:color="@color/button_login_background"/>
            <stroke android:color="@color/button_login_background"
                android:width="1dp"/>
        </shape>
    </item>
</selector>